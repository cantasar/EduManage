@model IEnumerable<Registry>

<div class="container my-5">
    <h2 class="mb-4">Student List</h2>
    <a asp-action="Create" asp-controller="Registration" class="btn btn-primary">New Registration</a>
<hr>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(m => m.RegistryId)</th>
        <th>@Html.DisplayNameFor(m=> m.Student.Name)</th>
        <th>@Html.DisplayNameFor(m=> m.Student.Surname)</th>
        <th>@Html.DisplayNameFor(m=> m.Course.Title)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.RegistryId)</td>
            <td>@Html.DisplayFor(modelItem => item.Student.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Student.Surname)</td>
            <td>@Html.DisplayFor(modelItem => item.Course.Title)</td>
            <td>
                <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-primary btn-sm">Edit</a>
                <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

</div>