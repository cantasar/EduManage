@model Course

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">New Course Registration</h5>
            <form asp-controller="Course" asp-action="Add" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Course Title</label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter Course Title">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>