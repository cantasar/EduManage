@model Student

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">New Student Registration</h5>
            <form asp-controller="Student" asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Student Name</label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter student name">
                </div>
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label fw-bold">Student Surname</label>
                    <input asp-for="Surname" class="form-control form-control-lg" placeholder="Enter student surname">
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Student Email</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter student email">
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold">Student Phone</label>
                    <input asp-for="Phone" class="form-control form-control-lg" placeholder="Enter student phone">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
